			<suffix value="akimbo_" />
		</dualwield>
	</params>
	<ammos>
		<ammo name="gaussbullet" extra="30" amount="10" />
	</ammos>
	<geometry>
		<firstperson name="objects/weapons/c3_us/Gauss_v2/gauss_v2_fp.chr" angles="0,0,0" />
		<thirdperson name="objects/weapons/c3_us/Gauss_v2/gauss_v2_tp.cgf" angles="0,0,0" />
		<boneAttachments>
			<attachment target="firstperson" name="muzzle_flash_effect" bone="weapon_term" />
			<attachment target="firstperson" name="muzzle_flash_light" bone="weapon_term" />
