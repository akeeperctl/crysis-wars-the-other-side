<item name="FastLightMOAC_MKII" class="Weapon" >
	<params>
		<param name="equipeable"	value="1" />
		<param name="giveable" 		value="1" />
		<param name="selectable" 	value="1" />
		<param name="pickable" 		value="0" />
		<param name="mountable" 	value="0" />
		<param name="usable"		 	value="0" />
		<param name="arms"			 	value="0" />
		<param name="melee_attack_firemode"	value="melee" />
		<param name="droppable" value="0" />
	</params>
	<ai_descriptor handler="instant" speed="80" coverFireTime="3" damage_radius="-1" charge_time="0.3" burstBulletCountMin="1" burstBulletCountMax="35" burstPauseTimeMin="0.8" burstPauseTimeMax="3.5" singleFireTriggerTime="-1" />
	<ammos>
		<ammo name="lightacmo_mkII" amount="1000" />
	</ammos>
	<geometry>
		<boneAttachments>
			<attachment target="thirdperson" name="overheat_effect" bone="weapon_term_moac" position="1,1,1"/>
		</boneAttachments>
	</geometry>
	<actions>	
		<action name="spin_up">
			<sound target="thirdperson" name="sounds/weapons:moac_small:spin_up" radius="15" static="1" />
		</action>
		<action name="spin_down">
			<sound target="thirdperson" name="sounds/weapons:moac_small:spin_down" radius="15" static="1" />
		</action>
		<action name="rapid_fire">
			<sound target="thirdperson" name="sounds/weapons:moac_small:fire_loop" radius="100" static="1" synched="1"/>
		</action>
		<action name="blast">
			<sound target="thirdperson" name="sounds/weapons:moac_small:fire" radius="100" static="1" />
		</action>		
		<action name="fire">
			<animation target="thirdperson" name="fire_acmo_01" />
			<animation target="owner" name="shoot" />
			<sound target="thirdperson" name="sounds/weapons:moac_small:fire" radius="100" static="1" />
		</action>
		<action name="idle">
			<animation target="thirdperson" name="idle_01" />
			<animation target="owner" name="idle" />
		</action>
		<action name="overheating">
			<sound target="firstperson" name="Sounds/weapons:moar_small:overfreeze" radius="0" static="0" />
			<sound target="thirdperson" name="Sounds/weapons:moar_small:overfreeze" radius="0" static="0" />
		</action>
	</actions>
	<firemodes>
		<firemode name="Rapid" type="Rapid">
			<fire>
				<param name="spin_up_time" value="0.3"/>
				<param name="ammo_type" value="lightacmo_mkII" />
				<param name="rate" value="1000" />
				<param name="damage" value="30" />
				<param name="clip_size" value="-1" />
       			<param name="reload_time" value="4" />
				<param name="max_clips" value="-1" />
				<param name="offset" value="1" />
				<param name="helper_tp" value="dummy" />
				<param name="hit_type" value="ht_TrooperMoac" />
			</fire>
			<heating>				
				<param name="overheat_time" value="4.0" /> 
				<param name="duration" value="2.75" />
				<param name="cooldown_time" value="1.0" />
				<param name="helper_tp" value="overheat_effect"/>
				<param name="effect_tp" value="expansion_alien_fx.Trooper.reload"/>
			</heating>
			<spread>
				<param name="min" value="0.035" />
				<param name="max" value="0.10" />
				<param name="attack" value="0.01" />
				<param name="decay" value="0.10" />
			</spread>
			<rapid>
				<param name="min_speed" value="2.55" />
				<param name="max_speed" value="3.25" />
				<param name="acceleration" value="8.25" />
				<param name="deceleration" value="-8.0" />
			</rapid>
		<spinup>
				<thirdperson effect="expansion_alien_fx.Trooper.Moac_charge" helper="dummy"  time="2.0" light_radius="0" />
		</spinup>
		<muzzleflash>
				<thirdperson effect="expansion_alien_fx.Trooper.Moac_Firing" helper="dummy" time="1.0" light_radius="0" />
		</muzzleflash>
		</firemode>
		<firemode name="melee" type="Melee">
			<melee>
				<param name="helper" value="collision" />
				<param name="damage" value="180" />
				<param name="impulse" value="0.3" />
				<param name="delay" value="0.55" />
				<param name="duration" value="0.45" />
				<param name="clip_size" value="-1" />
			</melee>
			<actions>
				<param name="attack" value="melee" />
			</actions>
		</firemode>
	</firemodes>
